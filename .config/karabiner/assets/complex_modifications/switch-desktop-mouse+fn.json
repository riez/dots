{
  "title": "Switch desktop with mouse buttons fn + 4/5",
  "rules": [
    {
      "description": "Maps FN + button 4/5 to left/right desktop switch",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": "fn",
            "pointing_button": "button5"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": "left_control"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": "fn",
            "pointing_button": "button4"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": "left_control"
            }
          ]
        }
      ]
    }
  ]
}